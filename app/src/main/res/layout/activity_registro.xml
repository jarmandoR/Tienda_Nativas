<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blancohueso"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/iconotienda" />

        <!-- Título -->

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Crear Cuenta"
            android:textColor="#0077CC"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Nombre -->

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0077CC"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <!-- Email -->

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0077CC"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Contraseña -->

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0077CC"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Confirmar Contraseña -->

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#0077CC"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Botón de Registro -->

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Azul"
            android:padding="14dp"
            android:text="Registrarse"
            android:textColor="#FFFFFF" />

        <!-- Link para iniciar sesión -->

        <TextView
            android:id="@+id/loginRedirectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="¿Ya tienes cuenta? Iniciar sesión"
            android:textColor="#0077CC"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>